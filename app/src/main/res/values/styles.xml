<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="match_parent_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_parent_wrap_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_content_match_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="time_text_style" parent="wrap_content_wrap_content">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/time_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="video_title_text_style" parent="match_parent_wrap_content">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/you_tube_action_button_background</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="you_tube_progress_style" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:progressDrawable">@drawable/progress</item>
        <item name="android:thumb">@drawable/progress_thumb</item>
    </style>

    <style name="menu_text_style" parent="match_parent_wrap_content">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
