<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/you_tube_controllers"
    style="@style/match_parent_match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/play_stop_view_button"
        style="@style/wrap_content_wrap_content"
        android:background="@drawable/you_tube_action_button_background"
        android:src="@drawable/ic_action_av_play_circle_outline"
        android:layout_centerInParent="true" />

    <LinearLayout
        style="@style/match_parent_wrap_content"
        android:padding="@dimen/padding"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/play_stop_slider_button"
            style="@style/wrap_content_wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:src="@drawable/ic_action_av_play_circle_fill"
            android:visibility="gone" />

        <TextView
            android:id="@+id/current_time"
            style="@style/time_text_style"
            android:layout_marginRight="@dimen/margin"
            android:text="@string/time_sample"/>

        <SeekBar
            android:id="@+id/seek_bar"
            style="@style/you_tube_progress_style" />

        <TextView
            android:id="@+id/max_time"
            style="@style/time_text_style"
            android:text="@string/time_sample"/>

    </LinearLayout>

</RelativeLayout>